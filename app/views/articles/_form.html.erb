<%= form_with(model: article) do |form| %>  <!-- Zmieniamy "f" na "form" -->
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.text_field :title, class: 'form-control', placeholder: 'Title of Article' %>
  </div>

  <div class="form-group mb-3">
    <%= form.text_area :body, class: 'form-control', placeholder: 'Article Body' %>
  </div>

  <div class="form-group mb-3">
    <%= form.text_field :image_url, class: 'form-control', placeholder: 'Image URL' %>
  </div>

  <div class="form-group mb-3">
    <%= form.collection_select :category_id, Category.all, :id, :name, {prompt: 'Choose a Category'}, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>  <!-- Zmieniamy klasÄ™ na Bootstrap 5 -->
  </div>
<% end %>
